@model IEnumerable<MotifStokTakip.Model.Entities.Customer>
@{
    ViewData["Title"] = "Müşteriler";
    var q = (string?)ViewBag.Search;
    int page = (int)(ViewBag.Page ?? 1);
    int totalPages = (int)(ViewBag.TotalPages ?? 1);
}
<div class="d-flex justify-content-between align-items-center mb-3">
    <h4 class="mb-0">Müşteriler</h4>
    <a class="btn btn-primary" asp-action="Create">Yeni Müşteri</a>
</div>

<form method="get" class="d-flex gap-2 mb-3">
    <input type="text" name="q" value="@q" class="form-control" placeholder="Ara (ad, firma, telefon, adres)">
    <button class="btn btn-outline-secondary">Ara</button>
</form>

<table class="table table-striped table-hover align-middle" class="table table-hover align-middle">
    <thead>
        <tr><th>#</th><th>Ad Soyad</th><th>Firma</th><th>Telefon</th><th class="text-end">İşlem</th></tr>
    </thead>
    <tbody>
        @{
            var i = 1 + ((page - 1) * (int)ViewBag.PageSize);
            foreach (var c in Model)
            {
                <tr>
                    <td>@i</td>
                    <td class="fw-semibold">@c.FullName</td>
                    <td>@c.CompanyName</td>
                    <td>@c.Phone</td>
                    <td class="text-end">
                        <div class="btn-group">
                            <a class="btn btn-sm btn-outline-secondary" asp-action="Details" asp-route-id="@c.Id">Detay</a>
                            <a class="btn btn-sm btn-outline-secondary" asp-action="Edit" asp-route-id="@c.Id">Düzenle</a>
                            <a class="btn btn-sm btn-outline-primary" asp-action="Payments" asp-route-id="@c.Id">Tahsilatlar</a>
                        </div>
                    </td>
                </tr>
                i++;
            }
        }
    </tbody>
</table>

@if (totalPages > 1)
{
    <nav aria-label="Sayfalama">
        <ul class="pagination justify-content-end">
            <li class="page-item @(page <= 1 ? "disabled" : "")">
                <a class="page-link" asp-route-page="@(page - 1)" asp-route-q="@q">Önceki</a>
            </li>

            @for (var p = Math.Max(1, page - 2); p <= Math.Min(totalPages, page + 2); p++)
            {
                <li class="page-item @(p == page ? "active" : "")">
                    <a class="page-link" asp-route-page="@p" asp-route-q="@q">@p</a>
                </li>
            }

            <li class="page-item @(page >= totalPages ? "disabled" : "")">
                <a class="page-link" asp-route-page="@(page + 1)" asp-route-q="@q">Sonraki</a>
            </li>
        </ul>
    </nav>
}
