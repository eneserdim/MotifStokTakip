@model MotifStokTakip.WebUI.Models.CustomerPaymentFormViewModel
@using MotifStokTakip.Model.Enums
@{
    var c = (MotifStokTakip.Model.Entities.Customer)ViewBag.Customer;
}

<h4>Yeni Tahsilat • @c.FullName</h4>
<hr />
<form asp-action="CreatePayment" method="post" class="card p-3">
    @Html.AntiForgeryToken()
    <input type="hidden" asp-for="CustomerId" />
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

    <div class="row g-3">
        <div class="col-md-3">
            <label asp-for="Amount" class="form-label"></label>
            <input asp-for="Amount" class="form-control" />
            <span asp-validation-for="Amount" class="text-danger"></span>
        </div>
        <div class="col-md-3">
            <label asp-for="Direction" class="form-label"></label>
            <select asp-for="Direction" class="form-select">
                <option value="@((int)PaymentDirection.In)">Tahsilat (Alınan)</option>
                <option value="@((int)PaymentDirection.Out)">İade/Ödeme (Verilen)</option>
            </select>
        </div>
        <div class="col-md-3">
            <label asp-for="Method" class="form-label"></label>
            <input asp-for="Method" class="form-control" placeholder="Nakit / EFT / Kart" />
        </div>
        <div class="col-12">
            <label asp-for="Note" class="form-label"></label>
            <textarea asp-for="Note" rows="2" class="form-control"></textarea>
            <span asp-validation-for="Note" class="text-danger"></span>
        </div>
    </div>

    <div class="mt-3 d-flex gap-2">
        <button class="btn btn-primary">Kaydet</button>
        <a class="btn btn-outline-secondary" asp-action="Payments" asp-route-id="@c.Id">Geri</a>
    </div>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
