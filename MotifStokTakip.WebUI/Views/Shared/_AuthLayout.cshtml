@*
  Modern Auth Layout – koyu degrade zemin, yumuşak ışık dokuları ve cam efektleri için temel stiller burada.
  Bu layout sadece giriş/kayıt/şifre sıfırlama sayfaları gibi auth ekranlarında kullanılmalıdır.
*@
<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width,initial-scale=1" />
    <title>@ViewData["Title"] - Motif Otomotiv</title>

    <!-- Bootstrap 5 -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">

    <!-- Bootstrap Icons (küçük ikonlar için) -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.css" rel="stylesheet"/>

    <!-- Yazı tipi (Inter) -->
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;600;700&display=swap" rel="stylesheet"/>

    <style>
        :root {
            --glass-bg: rgba(255,255,255,.08);
            --glass-stroke: rgba(255,255,255,.16);
            --text-on-dark: #e9eef5;
            --muted-on-dark: #b9c2cf;
            --brand: #7aa2ff;
            --brand-2: #00d4ff;
        }
        html,body {
            height: 100%;
            font-family: Inter, system-ui, -apple-system, "Segoe UI", Roboto, "Helvetica Neue", Arial, "Noto Sans", "Apple Color Emoji","Segoe UI Emoji", "Segoe UI Symbol";
            color: var(--text-on-dark);
            background: radial-gradient(1200px 600px at 20% -20%, #1e293b 0%, #0b1220 60%) no-repeat,
                        radial-gradient(800px 400px at 120% 120%, #0e1b30 0%, #0b1220 60%) no-repeat,
                        linear-gradient(180deg,#0c1424, #0b1220);
            background-attachment: fixed;
        }
        /* yumuşak parıltılar */
        .bg-glow::before,
        .bg-glow::after{
            content:"";
            position: absolute;
            pointer-events:none;
            filter: blur(60px);
            opacity:.65;
        }
        .bg-glow::before{
            width: 280px; height: 280px;
            left: -80px; top: -80px;
            background: radial-gradient(circle at center, #2ea8ff55, transparent 60%);
        }
        .bg-glow::after{
            width: 320px; height: 320px;
            right: -100px; bottom: -80px;
            background: radial-gradient(circle at center, #7aa2ff55, transparent 60%);
        }

        /* cam kutu */
        .glass {
            background: var(--glass-bg);
            border: 1px solid var(--glass-stroke);
            backdrop-filter: blur(18px) saturate(120%);
            -webkit-backdrop-filter: blur(18px) saturate(120%);
            border-radius: 18px;
            box-shadow:
                0 10px 30px rgba(0,0,0,.45),
                inset 0 1px 0 rgba(255,255,255,.04);
        }

        .page-wrap {
            min-height: 100%;
            display: grid;
            place-items: center;
            padding: clamp(16px, 3vw, 32px);
        }

        .auth-card {
            position: relative;
            width: min(1100px, 92vw);
        }

        .brand-chip {
            display:inline-flex;
            align-items:center;
            gap:.6rem;
            padding:.5rem .8rem;
            border-radius: 999px;
            background: rgba(255,255,255,.06);
            border: 1px solid rgba(255,255,255,.12);
            color: var(--text-on-dark);
            font-weight:600;
        }

        .badge-soft {
            background: rgba(255,255,255,.06);
            border: 1px solid rgba(255,255,255,.12);
            color: var(--muted-on-dark);
            border-radius: 999px;
            padding:.45rem .7rem;
            font-size: .9rem;
        }

        .input-dark.form-control, .input-dark.form-control:focus {
            background: rgba(255,255,255,.06);
            border-color: rgba(255,255,255,.16);
            color: var(--text-on-dark);
        }
        .input-dark::placeholder { color: #9dadc0; }

        .btn-brand {
            --bs-btn-color: #fff;
            --bs-btn-bg: linear-gradient(90deg, var(--brand) 0%, var(--brand-2) 100%);
            --bs-btn-border-color: #fff;
            --bs-btn-hover-bg: linear-gradient(90deg, #8ab1ff 0%, #2fe8ff 100%);
            --bs-btn-hover-border-color: transparent;
            --bs-btn-focus-shadow-rgb: 122,162,255;
        }

        .link-muted {
            color: var(--muted-on-dark);
            text-decoration: none;
        }
        .link-muted:hover { color: #fff; }

        /* responsive: iki panel */
        .left-pane {
            padding: clamp(24px, 3.2vw, 28px);
        }
        .right-pane {
            padding: clamp(22px, 2.4vw, 26px);
            background: rgba(11,18,32,.42);
            border-left: 1px solid rgba(255,255,255,.06);
        }
        @@media (max-width: 992px) {
            .right-pane { border-left: 0; border-top: 1px solid rgba(255,255,255,.06); }
        }

        .small-muted { color: var(--muted-on-dark); }
        .form-check-input { cursor: pointer; }
    </style>
</head>
<body>
    <main class="page-wrap position-relative">
        <div class="auth-card glass bg-glow">
            @RenderBody()
        </div>
    </main>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>
