@using MotifStokTakip.WebUI.Models.Paging
@model PagedResult<object>

@if (Model.TotalPages > 1)
{
    var route = new Dictionary<string, string?>()
                {
                    ["q"] = Model.Query
                };

    <nav aria-label="Sayfalama" class="mt-3">
        <ul class="pagination justify-content-end">
            <li class="page-item @(Model.Page == 1 ? "disabled" : "")">
                <a class="page-link"
                   asp-route-page="@(Model.Page - 1)"
                   asp-all-route-data="route">Önceki</a>
            </li>

            @for (int i = 1; i <= Model.TotalPages; i++)
            {
                <li class="page-item @(i == Model.Page ? "active" : "")">
                    <a class="page-link" asp-route-page="@i" asp-all-route-data="route">@i</a>
                </li>
            }

            <li class="page-item @(Model.Page == Model.TotalPages ? "disabled" : "")">
                <a class="page-link"
                   asp-route-page="@(Model.Page + 1)"
                   asp-all-route-data="route">Sonraki</a>
            </li>
        </ul>
    </nav>
}
