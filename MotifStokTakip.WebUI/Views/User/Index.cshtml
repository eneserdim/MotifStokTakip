@using MotifStokTakip.Model.Entities
@using MotifStokTakip.Model.Enums
@model IEnumerable<AppUser>
@{
    ViewData["Title"] = "Kullanıcılar";
    int page = ViewBag.Page ?? 1;
    int pageSize = ViewBag.PageSize ?? 10;
    int total = ViewBag.Total ?? 0;
    string q = ViewBag.Q as string ?? "";
    int totalPages = (int)Math.Ceiling(total / (double)pageSize);
    if (totalPages == 0) totalPages = 1;
}

<div class="d-flex justify-content-between align-items-center mb-3">
    <h4 class="mb-0">Kullanıcılar</h4>
    <a class="btn btn-primary" asp-action="Create">Yeni Kullanıcı</a>
</div>

<form class="row g-2 mb-3">
    <div class="col-md-4">
        <input name="q" value="@q" class="form-control" placeholder="Ara (Ad, Kullanıcı adı)" />
    </div>
    <div class="col-md-auto">
        <button class="btn btn-outline-secondary">Ara</button>
    </div>
</form>

<div class="table-responsive">
    <table class="table table-striped table-hover align-middle" class="table align-middle">
        <thead>
            <tr>
                <th>#</th>
                <th>Ad Soyad</th>
                <th>Kullanıcı Adı</th>
                <th>Rol</th>
                <th>Durum</th>
                <th class="text-end">İşlem</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var u in Model)
            {
                <tr>
                    <td>@u.Id</td>
                    <td>@u.FullName</td>
                    <td>@u.UserName</td>
                    <td>
                        <span class="badge bg-dark">@u.Role</span>
                    </td>
                    <td>
                        @if (u.IsActive)
                        {
                            <span class="badge bg-success">Aktif</span>
                        }
                        else
                        {
                            <span class="badge bg-secondary">Pasif</span>
                        }
                    </td>
                    <td class="text-end">
                        <a class="btn btn-sm btn-outline-primary" asp-action="Edit" asp-route-id="@u.Id">Düzenle</a>
                        <form asp-action="ToggleActive" method="post" class="d-inline">
                            <input type="hidden" name="id" value="@u.Id" />
                            <button class="btn btn-sm btn-outline-warning">@((u.IsActive) ? "Pasif Yap" : "Aktif Yap")</button>
                        </form>
                        <form asp-action="ResetPassword" method="post" class="d-inline" onsubmit="return confirm('Şifre 123456 olarak sıfırlansın mı?');">
                            <input type="hidden" name="id" value="@u.Id" />
                            <input type="hidden" name="newPassword" value="123456" />
                            <button class="btn btn-sm btn-outline-secondary">Şifre Sıfırla</button>
                        </form>
                        <form asp-action="Delete" method="post" class="d-inline" onsubmit="return confirm('Silinsin mi?');">
                            <input type="hidden" name="id" value="@u.Id" />
                            <button class="btn btn-sm btn-outline-danger">Sil</button>
                        </form>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

<nav class="mt-3">
    <ul class="pagination">
        @for (int i = 1; i <= totalPages; i++)
        {
            <li class="page-item @(i==page?"active":"")">
                <a class="page-link" href="?q=@q&page=@i">@i</a>
            </li>
        }
    </ul>
</nav>
