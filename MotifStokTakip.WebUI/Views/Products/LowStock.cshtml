@model IEnumerable<MotifStokTakip.Model.Entities.Product>
@{
    ViewData["Title"] = "Düşük Stok";
    var threshold = (int)(ViewBag.Threshold ?? 10);
    var page = (int)(ViewBag.Page ?? 1);
    var pageSize = (int)(ViewBag.PageSize ?? 10);
    var total = (int)(ViewBag.Total ?? 0);
    var totalPages = (int)(ViewBag.TotalPages ?? 1);
}
<div class="d-flex justify-content-between align-items-center mb-3">
    <h4 class="mb-0">Düşük Stok ( < @threshold )</h4>
    <form class="d-flex gap-2" method="get">
        <input type="number" class="form-control" name="threshold" value="@threshold" min="0" style="width:140px" />
        <button class="btn btn-outline-secondary">Uygula</button>
    </form>
</div>

<table class="table table-striped table-hover align-middle" class="table table-hover align-middle">
    <thead><tr><th>#</th><th>Ad</th><th>Barkod</th><th>Stok</th><th>Alış</th></tr></thead>
    <tbody>
        @{
            var i = (page - 1) * pageSize + 1;
            foreach (var p in Model)
            {
                <tr>
                    <td>@i</td>
                    <td>@p.Name</td>
                    <td>@p.Barcode</td>
                    <td><span class="badge bg-danger">@p.StockQuantity</span></td>
                    <td>@p.PurchasePrice.ToString("N2")</td>
                </tr>
                i++;
            }
        }
    </tbody>
</table>

@if (totalPages > 1)
{
    <nav>
        <ul class="pagination justify-content-center">
            @if (page > 1)
            {
                <li class="page-item">
                    <a class="page-link" href="?threshold=@threshold&page=@(page - 1)">Önceki</a>
                </li>
            }

            @for (int p = 1; p <= totalPages; p++)
            {
                <li class="page-item @(p == page ? "active" : "")">
                    <a class="page-link" href="?threshold=@threshold&page=@p">@p</a>
                </li>
            }

            @if (page < totalPages)
            {
                <li class="page-item">
                    <a class="page-link" href="?threshold=@threshold&page=@(page + 1)">Sonraki</a>
                </li>
            }
        </ul>
    </nav>
    <div class="text-center text-muted">
        Toplam @total kayıt, Sayfa @(page) / @totalPages
    </div>
}
