@model MotifStokTakip.Model.Entities.Product
@{
    ViewData["Title"] = "Barkod Yazdır";
    var img = Url.Content($"~/barcodes/{Model.Id}.png"); // güvenli yol
}
<style>
@@media print {
    .no-print { display:none; }
}
.card {
    max-width: 520px;
    margin: 20px auto;
    box-shadow: 0 10px 25px rgba(0,0,0,.08);
    border-radius: 16px;
    padding: 24px;
    text-align:center;
}
</style>

<div class="no-print text-center my-3">
    <a class="btn btn-outline-secondary" href="@Url.Action("Index")">Listeye Dön</a>
    <a class="btn btn-primary" target="_blank"
       href="@Url.Action("BarcodePrintRaw","Products", new { id = Model.Id })">
        Yazdır
    </a>
</div>


<div class="card">
    <h5>@Model.Name</h5>
    <div class="mt-3">
        <img src="@img" alt="barcode" style="max-width:480px;width:100%;" />
        <div class="mt-2" style="letter-spacing:3px;font-weight:600;">@Model.Barcode</div>
    </div>
</div>
