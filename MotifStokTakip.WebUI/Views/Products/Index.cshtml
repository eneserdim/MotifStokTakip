@model IEnumerable<MotifStokTakip.Model.Entities.Product>
@{
    ViewData["Title"] = "Ürünler";
    var q = (string?)ViewBag.Search;
    int page = (int)(ViewBag.Page ?? 1);
    int totalPages = (int)(ViewBag.TotalPages ?? 1);
}
<div class="d-flex justify-content-between align-items-center mb-3">
    <h4 class="mb-0">Ürünler</h4>
    <a class="btn btn-primary" asp-action="Create">Yeni Ürün</a>
</div>

<form method="get" class="d-flex gap-2 mb-3">
    <input name="q" class="form-control" value="@q" placeholder="Ara (Ad, OEM, Marka, Kod, Barkod)">
    <button class="btn btn-outline-secondary">Ara</button>
</form>

<table class="table table-striped table-hover align-middle" class="table table-hover align-middle">
    <thead>
        <tr>
            <th>#</th>
            <th>Ad</th>
            <th>OEM</th>
            <th>Marka</th>
            <th>Kod</th>
            <th>Alış</th>
            <th>Raf</th>
            <th>Stok</th>
            <th>Barkod</th>
            <th class="text-end">İşlem</th>
        </tr>
    </thead>
    <tbody>
        @{
            var i = 1 + ((page - 1) * (int)ViewBag.PageSize);
            foreach (var p in Model)
            {
                <tr>
                    <td>@i</td>
                    <td class="fw-semibold">@p.Name</td>
                    <td>@p.OemNumber</td>
                    <td>@p.BrandName</td>
                    <td>@p.BrandCode</td>
                    <td>@p.PurchasePrice.ToString("N2")</td>
                    <td>@p.ShelfNo</td>
                    <td>@p.StockQuantity</td>
                    <td>@p.Barcode</td>
                    <td class="text-end">
                        <div class="btn-group">
                            <a class="btn btn-sm btn-outline-secondary" asp-action="Details" asp-route-id="@p.Id">Detay</a>
                            <a class="btn btn-sm btn-outline-secondary" asp-action="Edit" asp-route-id="@p.Id">Düzenle</a>
                            <form asp-action="Delete" asp-route-id="@p.Id" method="post" onsubmit="return confirm('Silinsin mi?')">
                                @Html.AntiForgeryToken()
                                <button class="btn btn-sm btn-outline-danger">Sil</button>
                            </form>
                        </div>
                    </td>
                </tr>
                i++;
            }
        }
    </tbody>
</table>

@if (totalPages > 1)
{
    <nav aria-label="Sayfalama">
        <ul class="pagination justify-content-end">
            <li class="page-item @(page <= 1 ? "disabled" : "")">
                <a class="page-link" asp-route-page="@(page - 1)" asp-route-q="@q">Önceki</a>
            </li>

            @for (var p = Math.Max(1, page - 2); p <= Math.Min(totalPages, page + 2); p++)
            {
                <li class="page-item @(p == page ? "active" : "")">
                    <a class="page-link" asp-route-page="@p" asp-route-q="@q">@p</a>
                </li>
            }

            <li class="page-item @(page >= totalPages ? "disabled" : "")">
                <a class="page-link" asp-route-page="@(page + 1)" asp-route-q="@q">Sonraki</a>
            </li>
        </ul>
    </nav>
}
