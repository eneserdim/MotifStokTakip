@model IEnumerable<MotifStokTakip.Model.Entities.Technician>
@{
    ViewData["Title"] = "Ustalar";
    int page = ViewBag.Page ?? 1;
    int pageSize = ViewBag.PageSize ?? 10;
    int total = ViewBag.Total ?? 0;
    int pageCount = (int)Math.Ceiling(total / (double)pageSize);
    string q = ViewBag.Q as string ?? "";
}

<div class="d-flex justify-content-between align-items-center mb-3">
    <h4 class="mb-0">Ustalar</h4>
    <a class="btn btn-primary" asp-action="Create">Yeni Usta</a>
</div>


<form method="get" class="row g-2 mb-3">
    <div class="col-md-4">
        <input class="form-control" name="q" value="@q" placeholder="Ada göre ara" />
    </div>
    <div class="col-md-2">
        <button class="btn btn-outline-secondary w-100">Ara</button>
    </div>
</form>

<div class="card">
    <div class="table-responsive">
        <table class="table table-striped table-hover align-middle" class="table align-middle mb-0">
            <thead>
                <tr>
                    <th style="width:80px">#</th>
                    <th>Ad Soyad</th>
                    <th style="width:150px">Durum</th>
                    <th style="width:200px">İşlem</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var t in Model)
                {
                    <tr>
                        <td>@t.Id</td>
                        <td>@t.FullName</td>
                        <td>
                            @if (t.IsActive)
                            {
                                <span class="badge bg-success">Aktif</span>
                            }
                            else
                            {
                                <span class="badge bg-secondary">Pasif</span>
                            }
                        </td>
                        <td>
                            <a class="btn btn-sm btn-outline-primary" asp-action="Edit" asp-route-id="@t.Id">Düzenle</a>
                            <form asp-action="Delete" asp-route-id="@t.Id" method="post" class="d-inline" onsubmit="return confirm('Silinsin mi?')">
                                <button class="btn btn-sm btn-outline-danger">Sil</button>
                            </form>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

@if (pageCount > 1)
{
    <nav class="mt-3">
        <ul class="pagination">
            <li class="page-item @(page == 1 ? "disabled" : "")">
                <a class="page-link" asp-action="Index" asp-route-page="@(page-1)" asp-route-pageSize="@pageSize" asp-route-q="@q">Önceki</a>
            </li>
            @for (int i = 1; i <= pageCount; i++)
            {
                <li class="page-item @(i == page ? "active" : "")">
                    <a class="page-link" asp-action="Index" asp-route-page="@i" asp-route-pageSize="@pageSize" asp-route-q="@q">@i</a>
                </li>
            }
            <li class="page-item @(page == pageCount ? "disabled" : "")">
                <a class="page-link" asp-action="Index" asp-route-page="@(page+1)" asp-route-pageSize="@pageSize" asp-route-q="@q">Sonraki</a>
            </li>
        </ul>
    </nav>
}
