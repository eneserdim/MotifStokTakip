@model IEnumerable<MotifStokTakip.Model.Entities.Vehicle>
@{
    ViewData["Title"] = "Araçlar";
    var q = (string?)ViewBag.Search;
    int page = (int)(ViewBag.Page ?? 1);
    int totalPages = (int)(ViewBag.TotalPages ?? 1);
}
<div class="d-flex justify-content-between align-items-center mb-3">
    <h4 class="mb-0">Araçlar</h4>
    <a class="btn btn-primary" asp-action="Create">Yeni Araç</a>
</div>

<form method="get" class="d-flex gap-2 mb-3">
    <input name="q" class="form-control" value="@q" placeholder="Ara (Plaka, Marka, Model, Şasi No, Cari)">
    <button class="btn btn-outline-secondary">Ara</button>
</form>

<table class="table table-striped table-hover align-middle" class="table table-hover align-middle">
    <thead>
        <tr>
            <th>#</th>
            <th>Plaka</th>
            <th>Marka</th>
            <th>Model</th>
            <th>Yıl</th>
            <th>Şasi No</th>
            <th>Cari</th>
            <th class="text-end">İşlem</th>
        </tr>
    </thead>
    <tbody>
        @{
            var i = 1 + ((page - 1) * (int)ViewBag.PageSize);
            foreach (var v in Model)
            {
                <tr>
                    <td>@i</td>
                    <td>@v.Plate</td>
                    <td>@v.Brand</td>
                    <td>@v.Model</td>
                    <td>@(v.Year?.ToString() ?? "-")</td>
                    <td>@(string.IsNullOrWhiteSpace(v.Vin) ? "-" : v.Vin)</td>
                    <td>
                        @if (v.Customer != null)
                        {
                            <a asp-controller="Customers" asp-action="Details" asp-route-id="@v.Customer.Id">
                                @v.Customer.FullName
                            </a>
                        }
                        else
                        {
                            <span class="text-muted">-</span>
                        }
                    </td>
                    <td class="text-end">
                        <div class="btn-group">
                            <a class="btn btn-sm btn-outline-secondary" asp-action="Details" asp-route-id="@v.Id">Detay</a>
                            <a class="btn btn-sm btn-outline-secondary" asp-action="Edit" asp-route-id="@v.Id">Düzenle</a>
                        </div>
                    </td>
                </tr>
                i++;
            }
        }
    </tbody>
</table>

@if (totalPages > 1)
{
    <nav aria-label="Sayfalama">
        <ul class="pagination justify-content-end">
            <li class="page-item @(page <= 1 ? "disabled" : "")">
                <a class="page-link" asp-route-page="@(page - 1)" asp-route-q="@q">Önceki</a>
            </li>

            @for (var p = Math.Max(1, page - 2); p <= Math.Min(totalPages, page + 2); p++)
            {
                <li class="page-item @(p == page ? "active" : "")">
                    <a class="page-link" asp-route-page="@p" asp-route-q="@q">@p</a>
                </li>
            }

            <li class="page-item @(page >= totalPages ? "disabled" : "")">
                <a class="page-link" asp-route-page="@(page + 1)" asp-route-q="@q">Sonraki</a>
            </li>
        </ul>
    </nav>
}
