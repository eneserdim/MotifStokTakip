@model MotifStokTakip.Model.Entities.ServiceOrder
@{
    Layout = null;
}
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>Şikayet Yazdır - Servis #@Model.Id</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            margin: 40px;
            font-size: 14px;
        }
        h1 {
            text-align: center;
            margin-bottom: 30px;
        }
        .info-section {
            margin-bottom: 20px;
        }
        .label {
            font-weight: bold;
            display: inline-block;
            width: 150px;
        }
        .complaint-box {
            border: 1px solid #ddd;
            padding: 15px;
            margin-top: 20px;
            background: #f9f9f9;
            white-space: pre-wrap;
        }
        @@media print {
            body {
                margin: 20px;
            }
        }
    </style>
</head>
<body>
    <h1>Servis Şikayeti - #@Model.Id</h1>

    <div class="info-section">
        <div><span class="label">Müşteri:</span> @Model.Customer?.FullName</div>
        <div><span class="label">Araç:</span> @Model.Vehicle?.Plate - @Model.Vehicle?.Brand @Model.Vehicle?.Model</div>
        <div><span class="label">Tarih:</span> @Model.CreatedAt.ToLocalTime().ToString("dd.MM.yyyy HH:mm")</div>
        <div><span class="label">Durum:</span> @Model.Status</div>
    </div>

    <h3>Şikayet:</h3>
    <div class="complaint-box">
        @Html.Raw(Model.ComplaintText)
    </div>

    <script>
        window.onload = function() {
            window.print();
        };
    </script>
</body>
</html>
